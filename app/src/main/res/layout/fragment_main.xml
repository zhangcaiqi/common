<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/send_msg_btn"
                android:text="发送"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"/>
            <Button
                android:id="@+id/jump_to_page"
                android:text="分页测试"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/send_msg_btn"/>
            <Button
                android:id="@+id/jump_to_complex"
                android:text="复合列表"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/jump_to_page"/>
            <Button
                android:id="@+id/jump_to_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="跳转到图片框架"
                app:layout_constraintTop_toBottomOf="@id/jump_to_complex"/>
            <Button
                android:id="@+id/jump_to_indicator"
                android:text="跳转到指示器"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/jump_to_image"/>
            <Button
                android:id="@+id/jump_to_tab"
                android:text="跳转到TabActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/jump_to_indicator"/>
            <Button
                android:text="跳转到Option"
                android:id="@+id/jump_to_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/jump_to_tab"
                />
            <Button
                android:id="@+id/jump_to_page_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/jump_to_option"
                android:text="跳转到分页"
                />
            <Button
                android:id="@+id/btn_send_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/jump_to_page_food"
                android:text="发送短信"
                />
            <Button
                android:id="@+id/btn_toolbar_sample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="material toolbar"
                />
            <Button
                android:id="@+id/btn_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Material TabLayout"
                />
            <Button
                android:id="@+id/btn_drawer_layout_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DrawerLayout and NavigationView"/>

            <Button
                android:id="@+id/btn_fab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="float action button"

                />
        </LinearLayout>

    </ScrollView>


</LinearLayout>